<div id="core-star" class="core-star" role="button" aria-label="Observation Core">
  <div class="core-inner"></div>
  <div class="core-ring"></div>
</div>

<style>
  .core-star {
    width: 80px;
    height: 80px;
    position: relative;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .core-inner {
    width: 40px;
    height: 40px;
    background: #fff;
    border-radius: 50%;
    box-shadow: 
      0 0 20px rgba(255, 255, 255, 0.8),
      0 0 40px rgba(255, 255, 255, 0.4),
      0 0 80px rgba(255, 255, 255, 0.2);
    transition: all 0.3s ease;
    z-index: 2;
  }

  .core-ring {
    position: absolute;
    width: 100%;
    height: 100%;
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 50%;
    animation: spin 10s linear infinite;
    opacity: 0.5;
  }

  .core-star:hover .core-inner {
    box-shadow: 
      0 0 30px rgba(255, 255, 255, 1),
      0 0 60px rgba(255, 255, 255, 0.6),
      0 0 100px rgba(255, 255, 255, 0.4);
    transform: scale(1.1);
  }

  .core-star:hover .core-ring {
    border-color: rgba(255, 255, 255, 0.3);
    animation-duration: 4s;
  }

  @keyframes spin {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
  }
</style>

<script>
  const core = document.getElementById('core-star');
  let clickCount = 0;
  let clickTimer: any = null;

  if (core) {
    core.addEventListener('click', () => {
      clickCount++;
      clearTimeout(clickTimer);
      
      // Reset click count after 8 seconds (requirement: 7 clicks in ~8s)
      clickTimer = setTimeout(() => {
        clickCount = 0;
      }, 8000);

      const evt = new CustomEvent('core-payment', { 
        detail: { clickCount } 
      });
      window.dispatchEvent(evt); // Dispatch to global for MessageOverlay to catch
    });
  }
</script>
