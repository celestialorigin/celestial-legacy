---
interface Props {
  label: string;
  text: string;
  buttonLabel: string;
  url: string;
}

const { label, text, buttonLabel, url } = Astro.props;
---

<div class="primary-source glass-panel">
  <div class="source-header">
    <span class="source-label">{label}</span>
  </div>
  
  <div class="source-content">
    <p class="source-text">{text}</p>
    <a href={url} target="_blank" rel="noopener noreferrer" class="primary-btn">
      {buttonLabel}
    </a>
  </div>
</div>

<style>
  .primary-source {
    margin-bottom: 4rem;
    padding: 2.5rem;
    background: rgba(var(--c-accent-rgb), 0.03);
    border: 1px solid rgba(var(--c-accent-rgb), 0.15);
    border-left: 4px solid var(--c-accent);
    position: relative;
    overflow: hidden;
  }
  
  .primary-source::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(45deg, transparent, rgba(var(--c-accent-rgb), 0.05), transparent);
    pointer-events: none;
  }

  .source-header {
    margin-bottom: 1.5rem;
  }

  .source-label {
    font-size: 0.7rem;
    font-weight: bold;
    color: var(--c-accent);
    letter-spacing: 0.2em;
    text-transform: uppercase;
    opacity: 0.8;
  }

  .source-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 3rem;
  }

  .source-text {
    font-size: 1.1rem;
    line-height: 1.6;
    margin: 0;
    opacity: 0.9;
    flex: 1;
    letter-spacing: 0.02em;
  }

  .primary-btn {
    display: inline-block;
    padding: 1.2rem 2.5rem;
    background: rgba(var(--c-accent-rgb), 0.1);
    border: 1px solid var(--c-accent);
    color: var(--c-accent);
    text-decoration: none;
    font-weight: bold;
    font-size: 1.1rem;
    border-radius: 4px;
    transition: all 0.4s cubic-bezier(0.165, 0.84, 0.44, 1);
    white-space: nowrap;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    box-shadow: 0 0 10px rgba(var(--c-accent-rgb), 0.1);
  }

  .primary-btn:hover {
    background: var(--c-accent);
    color: #000;
    box-shadow: 0 0 30px var(--c-accent-glow);
    transform: translateY(-2px);
  }

  @media (max-width: 768px) {
    .source-content {
      flex-direction: column;
      align-items: flex-start;
      gap: 2rem;
    }
    .primary-btn {
      width: 100%;
      text-align: center;
    }
  }
</style>
