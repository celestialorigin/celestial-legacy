---
import Layout from '../../../layouts/Layout.astro';
// Disabled due to missing JSONs. Legacy route.
// import fieldnotes from '../../../data/fieldnotes.json'; ...

export function getStaticPaths() {
  return []; // Temporarily disabled for build stability
}

const { log, backPath } = Astro.props; // Stub
---

<Layout title={`${log.title} | CELESTIAL`}>
  <article class="log-detail-page">
    <div class="content glass-panel">
      <div class="observation-id">
        [ OBSERVATION LOG : {log.id} ]
      </div>

      <header class="detail-header">
        <h1 class="accent-title">{log.title}</h1>
        <p class="date-stamp">{log.date}</p>
      </header>

      <div class="detail-body">
        <p class="message">{log.message}</p>
        
        <div class="external-relay">
          <p class="relay-text">REPOSITORY / RELAY NODE</p>
          <a href={log.workUrl} target="_blank" rel="noopener noreferrer" class="btn btn-relay">
            記録媒体を開く
          </a>
        </div>
      </div>

      <div class="nav-footer">
        <a href={backPath} class="back-link">← ARCHIVE LISTへ戻る</a>
      </div>
    </div>
  </article>
</Layout>

<style>
  .log-detail-page {
    max-width: 700px;
    margin: 6rem auto;
    padding: 0 20px;
  }
  .content {
    padding: 3rem;
    background: rgba(255, 255, 255, 0.02);
    border: 1px solid rgba(255, 255, 255, 0.05);
    border-radius: 12px;
  }
  .observation-id {
    font-family: monospace;
    font-size: 0.8rem;
    opacity: 0.4;
    letter-spacing: 0.1em;
    margin-bottom: 2rem;
  }
  .accent-title {
    color: var(--c-accent);
    font-size: 2.2rem;
    letter-spacing: 0.05em;
    margin-bottom: 0.5rem;
  }
  .date-stamp {
    font-family: monospace;
    opacity: 0.6;
    font-size: 1rem;
    margin-bottom: 3rem;
  }
  .detail-body {
    margin-top: 2rem;
  }
  .message {
    line-height: 2;
    font-size: 1.1rem;
    opacity: 0.9;
    margin-bottom: 4rem;
    white-space: pre-line;
  }
  .external-relay {
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    padding-top: 2rem;
    margin-bottom: 4rem;
  }
  .relay-text {
    font-size: 0.75rem;
    font-weight: bold;
    opacity: 0.5;
    margin-bottom: 1.5rem;
    letter-spacing: 0.2em;
  }
  .btn-relay {
    display: inline-block;
    padding: 0.8rem 2rem;
    background: rgba(var(--c-accent-rgb), 0.1);
    border: 1px solid var(--c-accent);
    color: var(--c-accent);
    text-decoration: none;
    border-radius: 4px;
    transition: all 0.3s;
    font-weight: 500;
  }
  .btn-relay:hover {
    background: var(--c-accent);
    color: #000;
    box-shadow: 0 0 20px var(--c-accent-glow);
  }
  .nav-footer {
    text-align: center;
    border-top: 1px solid rgba(255, 255, 255, 0.05);
    padding-top: 3rem;
  }
  .back-link {
    opacity: 0.5;
    text-decoration: none;
    font-size: 0.9rem;
    transition: opacity 0.3s;
  }
  .back-link:hover {
    opacity: 1;
    color: var(--c-accent);
  }
</style>
