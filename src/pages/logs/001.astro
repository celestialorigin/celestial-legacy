---
import Layout from '../../layouts/Layout.astro';
import LogHeader from '../../components/LogHeader.astro';
import { getLog } from '../../lib/getLog';

const log = getLog("signal-8492");
if (!log) return Astro.redirect("/404");
---

<Layout title={`${log.title} | CELESTIAL`}>
  <article class="log-page container" style="max-width: 800px; margin: 4rem auto;">
    <div class="glass-panel" style="background: rgba(255, 255, 255, 0.02); border: 1px solid rgba(255, 255, 255, 0.05); border-radius: 12px; padding: 3rem;">
      <LogHeader 
        displayId={log.displayId}
        internalId={log.internalId}
        type={log.type}
        status={log.status}
      />
      
      <div style="margin-top: 3rem;">
        <h1 style="color: var(--c-accent); letter-spacing: 0.1em; margin-bottom: 0.5rem; font-size: 2rem;">{log.title}</h1>
        <p style="opacity: 0.6; font-size: 0.9rem; margin-bottom: 3rem; border-bottom: 1px solid rgba(255, 255, 255, 0.1); padding-bottom: 1rem;">{log.subtitle}</p>
        
        <div style="line-height: 2; opacity: 0.9;">
          {log.paragraphs.map(p => (
            <p style="margin-bottom: 1.5rem;">{p}</p>
          ))}
        </div>
      </div>

      <div class="code-block" style="background: rgba(0,0,0,0.5); padding: 1.5rem; border-radius: 4px; border: 1px solid rgba(255,255,255,0.1); font-family: monospace; color: #0f0; margin: 2rem 0; overflow-x: auto;">
        <code>
          // SIGNAL DECODING STREAM...<br>
          00101010 11010101 00010111<br>
          11100101 01010101 10101010<br>
          ... NO MATCH FOUND IN DATABASE
        </code>
      </div>

      <div style="margin-top: 40px; text-align: right;">
        <a href="/logs" style="opacity: 0.6; text-decoration: none;">← 観測ログへ戻る</a>
      </div>
    </div>
  </article>
</Layout>
