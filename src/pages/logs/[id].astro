---
import Layout from '../../layouts/Layout.astro';
import LogHeader from '../../components/LogHeader.astro';
import { logs } from '../../data/logs';
import { getSummary } from '../../utils/templates';

// LEGACY ROUTE: use /log/[id] instead
export function getStaticPaths() {
  return []; // Disabled to force usage of /src/pages/log/[id].astro
}

const { log } = Astro.props;
const summary = log?.summary || "";
const categoryLabel = log?.badge;
---

<Layout title={`${log.title} | CELESTIAL`}>
  <article class="log-detail-page container fade-in-section">
    <div class="glass-panel main-content">
      <LogHeader 
        displayId={`OBSERVATION LOG : ${log.id}`}
        internalId={log.id}
        type={log.category}
        status="STABLE"
      />

      <div class="detail-body">
        <header class="detail-header">
          <span class="category-tag">{categoryLabel}</span>
          <h1 class="accent-title">{log.title}</h1>
          <p class="date-stamp">{log.date}</p>
        </header>

        <section class="observation-section">
          <h2 class="section-title">観測記録</h2>
          <div class="observation-text">
            <p>{log.message || summary}</p>
          </div>
        </section>

        <div class="source-link-area">
          {log.url && log.url !== '#' ? (
            <>
              <p class="info-text">データノードへの移送準備が完了。外部媒体へアクセスします。/ PREPARING TO ACCESS SOURCE NODE.</p>
              <a href={log.url} target="_blank" rel="noopener noreferrer" class="primary-btn">
                OPEN SOURCE →
              </a>
            </>
          ) : (
            <p class="info-text info-text--no-external">
              外部ノードは存在しません。ここでのみ観測が可能です。<br />
              <span class="info-text__en">NO EXTERNAL NODE. LOCAL OBSERVATION ONLY.</span>
            </p>
          )}
        </div>
      </div>

      <footer class="nav-footer">
        <button onclick="history.back()" class="back-link">← RETURN TO STATION</button>
      </footer>
    </div>
  </article>
</Layout>

<style>
  .log-detail-page {
    max-width: 800px;
    margin: 6rem auto;
    padding: 0 20px;
  }
  .main-content {
    padding: 3rem;
    border-radius: 12px;
  }
  .detail-header {
    margin-bottom: 4rem;
  }
  .category-tag {
    font-size: 0.7rem;
    font-family: monospace;
    opacity: 0.5;
    letter-spacing: 0.2em;
    margin-bottom: 1rem;
    display: block;
  }
  .accent-title {
    color: var(--c-accent);
    font-size: 2.5rem;
    letter-spacing: 0.05em;
    margin-bottom: 0.5rem;
  }
  .date-stamp {
    font-family: monospace;
    opacity: 0.4;
    font-size: 1.1rem;
  }
  .observation-section {
    margin-bottom: 5rem;
  }
  .section-title {
    font-size: 0.8rem;
    opacity: 0.3;
    letter-spacing: 0.3em;
    margin-bottom: 2rem;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    padding-bottom: 0.5rem;
  }
  .observation-text {
    font-size: 1.2rem;
    line-height: 2;
    opacity: 0.9;
    letter-spacing: 0.05em;
  }
  .source-link-area {
    text-align: center;
    padding: 4rem 2rem;
    background: rgba(var(--c-accent-rgb), 0.03);
    border: 1px solid rgba(var(--c-accent-rgb), 0.1);
    border-radius: 8px;
  }
  .info-text {
    font-size: 0.75rem;
    opacity: 0.4;
    margin-bottom: 2rem;
  }
  .info-text--no-external {
    margin-bottom: 0;
    opacity: 0.6;
    font-size: 0.85rem;
    line-height: 1.8;
  }
  .info-text__en {
    display: block;
    margin-top: 0.5rem;
    font-size: 0.7rem;
    opacity: 0.5;
    letter-spacing: 0.1em;
  }
  .primary-btn {
    display: inline-block;
    padding: 1rem 3rem;
    background: rgba(var(--c-accent-rgb), 0.1);
    border: 1px solid var(--c-accent);
    color: var(--c-accent);
    text-decoration: none;
    font-weight: bold;
    border-radius: 4px;
    transition: all 0.3s;
  }
  .primary-btn:hover {
    background: var(--c-accent);
    color: #000;
    box-shadow: 0 0 20px var(--c-accent-glow);
  }
  .nav-footer {
    margin-top: 5rem;
    text-align: center;
  }
  .back-link {
    background: none;
    border: none;
    cursor: pointer;
    font-family: inherit;
    opacity: 0.4;
    font-size: 0.9rem;
    color: #fff;
    transition: opacity 0.3s;
  }
  .back-link:hover {
    opacity: 1;
    color: var(--c-accent);
  }
</style>
