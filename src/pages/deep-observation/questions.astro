---
import Layout from '../../layouts/Layout.astro';
---

<Layout title="QUESTIONS | DEEP OBSERVATION">
  <article class="fade-in-section">
    <h1 style="color: var(--c-accent); letter-spacing: 0.1em; margin-bottom: 2rem;">QUESTIONS</h1>
    
    <div style="background: rgba(255,255,255,0.03); border: 1px solid rgba(255,255,255,0.05); border-radius: 8px; padding: 2.5rem;">
        <p style="opacity: 0.8; line-height: 2.0; margin-bottom: 2rem; font-family: monospace; font-size: 0.95rem;">
            OBSERVER_QUERY_DETECTION: ACTIVE<br /><br />
            RESPONSE_GUARANTEE: UNDEFINED<br />
            QUERY_UTILIZATION: OBSERVATION_HINT_INTEGRATION
        </p>
        <p style="opacity: 0.5; font-size: 0.85em; font-family: monospace;">
            [ Individual response: not guaranteed ]
        </p>
    </div>

    <div style="margin-top: 40px;">
      <a href="/deep-observation" style="opacity: 0.6; text-decoration: none; font-family: monospace; font-size: 0.85rem;">‚Üê RETURN</a>
    </div>
  </article>
</Layout>
