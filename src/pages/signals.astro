---
import Layout from "../layouts/Layout.astro";
import signalsData from "../data/signals.json";
import type { Signal } from "../types/signal";

const signals = signalsData as Signal[];
---

<Layout title="SIGNAL TRACE" bodyClass="page-signals">
  <main class="console-container fade-in-section">
    <div class="header-section">
      <h1 class="glitch-text" data-text="SIGNAL//TRACE">SIGNAL//TRACE</h1>
      <p class="subtitle">EXTERNAL REFERENCES RECORDED FOR OBSERVATION</p>
      <p class="meta-info">TOTAL SIGNALS GENERATED: {signals.length}</p>
    </div>

    <div class="archive-list">
      {signals.map((sig) => (
         <div class="archive-row">
            <span class="date">{new Date(sig.date).toLocaleDateString()}</span>
            <span class={`kind-badge ${sig.kind}`}>{sig.kind.toUpperCase()}</span>
            <a href={sig.url} target="_blank" class="link-title">{sig.title}</a>
            <span class="source-id">[{sig.source}]</span>
         </div>
      ))}
    </div>
    
     <div class="actions">
      <a href="/real-time" class="btn-secondary">&lt;&lt; LIVE MONITOR</a>
      <a href="/archive" class="btn-secondary">>> INTERNAL ARCHIVE</a>
    </div>

  </main>
</Layout>

<style>
  .console-container {
    max-width: 900px;
    margin: 120px auto 40px;
    padding: 0 20px;
  }

  .header-section {
    margin-bottom: 30px;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    padding-bottom: 15px;
  }

  h1 {
    font-family: 'Zen Kaku Gothic New', sans-serif;
    color: #cbd5e1;
    font-size: 1.8rem;
    letter-spacing: 0.1em;
  }

  .subtitle {
    font-family: monospace;
    color: #64748b;
    font-size: 0.9rem;
  }

  .meta-info {
    font-family: monospace;
    color: rgba(0, 255, 255, 0.6);
    font-size: 0.8rem;
    margin-top: 5px;
  }
  
  .archive-list {
    display: flex;
    flex-direction: column;
    gap: 1px;
    background: rgba(255, 255, 255, 0.05);
  }

  .archive-row {
    display: flex;
    align-items: center;
    gap: 15px;
    padding: 12px 15px;
    background: rgba(10, 15, 20, 0.8);
    border-bottom: 1px solid rgba(255, 255, 255, 0.05);
    font-family: monospace;
    font-size: 0.9rem;
    transition: background 0.2s;
  }

  .archive-row:hover {
    background: rgba(20, 30, 40, 0.9);
  }

  .date {
    color: rgba(255, 255, 255, 0.5);
    min-width: 90px;
  }

  .kind-badge {
    font-size: 0.7rem;
    padding: 2px 6px;
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 4px;
    color: rgba(255, 255, 255, 0.7);
    min-width: 60px;
    text-align: center;
  }
  
  .kind-badge.video { border-color: rgba(255, 100, 100, 0.4); color: #ffcccc; }
  .kind-badge.novel { border-color: rgba(100, 255, 100, 0.4); color: #ccffcc; }

  .link-title {
    color: #e0faff;
    text-decoration: none;
    flex-grow: 1;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }
  
  .link-title:hover {
    color: #00ffff;
    text-decoration: underline;
  }

  .source-id {
    color: rgba(255, 255, 255, 0.3);
    font-size: 0.8rem;
  }

  .actions {
    margin-top: 40px;
    display: flex;
    justify-content: space-between;
  }
  
  .btn-secondary {
    display: inline-block;
    padding: 10px 24px;
    border: 1px solid rgba(0, 255, 255, 0.3);
    color: rgba(0, 255, 255, 0.8);
    text-decoration: none;
    font-family: monospace;
    font-size: 0.9rem;
    background: rgba(0, 20, 30, 0.6);
    transition: all 0.3s;
  }
  
  .btn-secondary:hover {
     background: rgba(0, 255, 255, 0.15);
     color: #fff;
     border-color: rgba(0, 255, 255, 0.6);
  }
</style>
