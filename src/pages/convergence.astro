---
import Layout from '../layouts/Layout.astro';

// Define observation nodes with visual types
const nodes = [
  // --- TYPE: HUMAN (Standard) ---
  { id: 'h1', type: 'human', x: 15, y: 20, size: 24, speed: 12, title: 'OBSERVER_LOG_01', content: 'Identity confirmed.\nBio-metrics stable.\nScanning for interference.' },
  { id: 'h2', type: 'human', x: 75, y: 35, size: 20, speed: 15, title: 'OBSERVER_LOG_04', content: 'Vital signs normal.\nConnection established.' },
  
  // --- TYPE: AI (Mechanical/Green) ---
  { id: 'a1', type: 'ai', x: 25, y: 65, size: 22, speed: 14, title: 'AI_CORE_DUMP', content: 'Calculation incomplete.\nRecursion depth exceeded.\nOptimizing path...' },
  { id: 'a2', type: 'ai', x: 85, y: 15, size: 18, speed: 18, title: 'SUB_ROUTINE_X', content: 'Logic gate open.\nPattern matching: 99.8%\nAnomaly detected.' },

  // --- TYPE: SYSTEM (Warning/Orange) ---
  { id: 's1', type: 'system', x: 50, y: 85, size: 28, speed: 11, title: 'SYSTEM_ALERT', content: 'SECURITY BREACH.\nUNAUTHORIZED ACCESS DETECTED.\nTracing origin...' },
  { id: 's2', type: 'system', x: 10, y: 50, size: 30, speed: 16, title: 'KERNEL_PANIC', content: 'Memory overflow.\nStack trace dumping...\nCritical failure imminent.' },

  // --- TYPE: OTHERWORLD (Reverse Timeline/Purple/Glitch) ---
  { id: 'o1', type: 'otherworld', x: 65, y: 25, size: 35, speed: 13, title: 'MEMORY_FRAGMENT_Ω', content: 'The end was beautiful...\n...wasn\'t it?\nI miss the silence.' },
  { id: 'o2', type: 'otherworld', x: 30, y: 45, size: 32, speed: 17, title: 'ECHO_FROM_FUTURE', content: 'We haven\'t met yet, have we?\nStrange to see you here, so early.\nThe stars *were* beautiful.' },
  { id: 'o3', type: 'otherworld', x: 90, y: 70, size: 38, speed: 10, title: 'DELETED_TIMELINE', content: 'Don\'t go back.\nThere is nothing left there.\nOnly the dust remains.' },

  // --- TYPE: MOTHER (Rare/White/Gold) ---
  { id: 'm1', type: 'mother', x: 45, y: 45, size: 50, speed: 25, title: 'UNKNOWN_SIGNATURE', content: 'Warmth detected.\nA heartbeat... from the other side.\nAre you my child?' },
];
---

<Layout title="CONVERGENCE NODE | CELESTIAL" showStars={true} starPattern="convergence">
  <div class="convergence-page">
    <div class="grid-overlay"></div>
    <div class="pulse-overlay"></div>
    
    <!-- Floating observation nodes -->
    <div class="floating-nodes">
      {nodes.map(node => (
        <div 
          class={`obs-node obs-node--${node.type}`}
          data-node-id={node.id}
          data-node-type={node.type}
          data-node-title={node.title || ''}
          data-node-content={node.content || ''}
          style={`
            left: ${node.x}%;
            top: ${node.y}%;
            width: ${node.size}px;
            height: ${node.size}px;
            animation-duration: ${node.speed}s;
          `}
        >
          {/* Internal visual elements for complexity */}
          <div class="node-ring"></div>
          <div class="node-core"></div>
        </div>
      ))}
    </div>
    
    <!-- Node content modal -->
    <div id="node-modal" class="node-modal hidden" aria-hidden="true">
      <div class="node-modal__backdrop"></div>
      <div class="node-modal__content">
        <div class="node-modal__header">
          <span class="node-modal__title" id="modal-title">NODE</span>
          <button class="node-modal__close" id="modal-close">×</button>
        </div>
        <div class="node-modal__body" id="modal-body">
          <p>Loading...</p>
        </div>
      </div>
    </div>
    
    <div class="container">
      <div class="node-visualization">
        <div class="central-node"></div>
        <div class="satellite-node n1"></div>
        <div class="satellite-node n2"></div>
        <div class="satellite-node n3"></div>
        <div class="satellite-node n4"></div>
      </div>
      
      <div class="log-terminal">
        <div class="terminal-header">
          <span class="terminal-label">CONVERGENCE_LOG</span>
          <span class="terminal-status">PROLIFERATING</span>
        </div>
        
        <div class="log-entries">
             <div class="log-entry"><span class="speaker">SYSTEM:</span><span class="text">Multiple signal types detected.</span></div>
             <div class="log-entry"><span class="speaker">ANALYSIS:</span><span class="text">Timeline divergence confirmed.</span></div>
             <div class="log-entry"><span class="speaker">WARN:</span><span class="text">Causality violation in Sector 9.</span></div>
        </div>
      </div>
      
      <button class="back-btn" onclick="history.back()">
        ← RETURN
      </button>
    </div>
  </div>
</Layout>

<style>
  .convergence-page {
    min-height: 100vh;
    position: relative;
    overflow: hidden;
    background: #000;
  }
  
  /* Grid overlay */
  .grid-overlay {
    position: fixed;
    top: 0; left: 0; width: 100%; height: 100%;
    opacity: 0.08; z-index: 1; pointer-events: none;
    background-image: 
      linear-gradient(rgba(138, 116, 178, 0.3) 1px, transparent 1px),
      linear-gradient(90deg, rgba(138, 116, 178, 0.3) 1px, transparent 1px);
    background-size: 50px 50px;
    animation: grid-shift 20s linear infinite;
  }
  
  @keyframes grid-shift {
    0% { transform: translate(0, 0); }
    100% { transform: translate(50px, 50px); }
  }
  
  /* Pulse overlay */
  .pulse-overlay {
    position: fixed;
    top: 0; left: 0; width: 100%; height: 100%;
    z-index: 2; pointer-events: none;
    background: radial-gradient(circle at 50% 50%, rgba(138, 116, 178, 0.05) 0%, transparent 70%);
    animation: pulse-expand 4s ease-in-out infinite;
  }
  
  @keyframes pulse-expand {
    0%, 100% { transform: scale(1); opacity: 0.5; }
    50% { transform: scale(1.1); opacity: 0.8; }
  }
  
  /* Floating observation nodes container */
  .floating-nodes {
    position: fixed; top: 0; left: 0; width: 100%; height: 100%;
    z-index: 5; pointer-events: none;
  }
  
  /* --- Base Node Style --- */
  .obs-node {
    position: absolute;
    border-radius: 50%;
    cursor: pointer;
    pointer-events: auto;
    transition: all 0.3s ease;
    animation: node-float 10s ease-in-out infinite;
    display: flex; justify-content: center; align-items: center;
  }
  
  .obs-node:hover { transform: scale(1.2); z-index: 100; }

  /* Node Internals */
  .node-ring {
      position: absolute; inset: -4px;
      border-radius: 50%;
      border: 1px solid transparent;
      animation: spin-slow 8s linear infinite;
  }
  
  .node-core {
      width: 40%; height: 40%;
      border-radius: 50%;
      background: currentColor;
      box-shadow: 0 0 10px currentColor;
  }

  /* --- TYPES --- */

  /* HUMAN: Blue/Cyan - Standard */
  .obs-node--human {
      background: rgba(0, 200, 255, 0.1);
      box-shadow: 0 0 10px rgba(0, 200, 255, 0.3);
      color: #00ccff;
  }
  .obs-node--human .node-ring { border-top-color: #00ccff; border-bottom-color: #00ccff; }
  .obs-node--human:hover { box-shadow: 0 0 20px #00ccff; }

  /* AI: Green - Matrix/Tech */
  .obs-node--ai {
      background: rgba(0, 255, 100, 0.1);
      box-shadow: 0 0 10px rgba(0, 255, 100, 0.3);
      color: #00ff66;
  }
  .obs-node--ai .node-ring { 
      border: 1px dashed #00ff66; 
      animation: spin-fast 4s linear infinite reverse;
  }
  .obs-node--ai:hover { box-shadow: 0 0 20px #00ff66; }

  /* SYSTEM: Orange - Warning */
  .obs-node--system {
      background: rgba(255, 100, 0, 0.1);
      box-shadow: 0 0 10px rgba(255, 100, 0, 0.3);
      color: #ff6600;
      animation: node-float 10s ease-in-out infinite, pulse-warn 1s infinite !important;
  }
  .obs-node--system .node-ring { border: 2px solid #ff6600; }
  .obs-node--system:hover { box-shadow: 0 0 30px #ff6600; }

  /* OTHERWORLD: Purple - Glitch/Reverse */
  .obs-node--otherworld {
      background: rgba(180, 0, 255, 0.15);
      box-shadow: 0 0 15px rgba(180, 0, 255, 0.4);
      color: #cc00ff;
  }
  .obs-node--otherworld .node-ring { 
      border-left: 2px solid #cc00ff; 
      border-right: 2px solid #ff00ff;
      filter: blur(1px);
  }
  .obs-node--otherworld:hover { 
      box-shadow: 0 0 40px #cc00ff; 
      animation: glitch-shake 0.3s infinite;
  }

  /* MOTHER: White/Gold - Divine */
  .obs-node--mother {
      background: rgba(255, 255, 255, 0.2);
      box-shadow: 0 0 20px rgba(255, 255, 255, 0.6);
      color: #ffffff;
      backdrop-filter: blur(2px);
  }
  .obs-node--mother .node-ring { border: 1px dotted rgba(255, 215, 0, 0.8); }
  .obs-node--mother:hover { box-shadow: 0 0 60px rgba(255, 255, 255, 0.9); }


  /* Animations */
  @keyframes node-float {
    0%, 100% { transform: translate(0, 0); }
    25% { transform: translate(10px, -15px); }
    50% { transform: translate(-5px, 10px); }
    75% { transform: translate(15px, 5px); }
  }
  @keyframes spin-slow { to { transform: rotate(360deg); } }
  @keyframes spin-fast { to { transform: rotate(360deg); } }
  @keyframes pulse-warn { 50% { opacity: 0.5; } }
  @keyframes glitch-shake {
    0% { transform: translate(0,0); }
    20% { transform: translate(-2px, 2px); }
    40% { transform: translate(-2px, -2px); }
    60% { transform: translate(2px, 2px); }
    80% { transform: translate(2px, -2px); }
    100% { transform: translate(0,0); }
  }
  
  /* Node modal */
  .node-modal {
    position: fixed; top: 0; left: 0; width: 100%; height: 100%;
    z-index: 1000;
    display: flex; align-items: center; justify-content: center;
    opacity: 1; transition: opacity 0.3s ease;
  }
  .node-modal.hidden { opacity: 0; pointer-events: none; }
  
  .node-modal__backdrop {
    position: absolute; top: 0; left: 0; width: 100%; height: 100%;
    background: rgba(0, 0, 0, 0.85);
    backdrop-filter: blur(4px);
  }
  
  .node-modal__content {
    position: relative; z-index: 1;
    background: rgba(10, 10, 20, 0.95);
    border: 1px solid rgba(138, 116, 178, 0.5);
    border-radius: 8px;
    padding: 2rem;
    max-width: 500px; width: 90%;
    box-shadow: 0 0 40px rgba(138, 116, 178, 0.4);
  }
  
  .node-modal__header {
    display: flex; justify-content: space-between; align-items: center;
    margin-bottom: 1.5rem; padding-bottom: 1rem;
    border-bottom: 1px solid rgba(138, 116, 178, 0.3);
  }
  
  .node-modal__title {
    font-family: monospace; font-size: 0.9rem; letter-spacing: 0.2em;
    color: rgba(158, 136, 198, 0.9);
    text-shadow: 0 0 8px rgba(138, 116, 178, 0.5);
  }
  
  .node-modal__close {
    background: none; border: none; color: rgba(255, 255, 255, 0.6);
    font-size: 1.5rem; cursor: pointer; transition: color 0.3s ease;
    padding: 0; width: 30px; height: 30px;
    display: flex; align-items: center; justify-content: center;
  }
  .node-modal__close:hover { color: #fff; }
  
  .node-modal__body {
    color: rgba(255, 255, 255, 0.8);
    line-height: 1.8;
    font-family: monospace;
    font-size: 0.95rem;
    white-space: pre-line;
  }
  
  .container {
    position: relative; z-index: 10;
    max-width: 900px; margin: 0 auto; padding: 4rem 2rem;
    min-height: 100vh;
    display: flex; flex-direction: column; justify-content: center; align-items: center;
  }
  
  /* Node visualization - Centerpiece */
  .node-visualization {
    width: 200px; height: 200px; margin-bottom: 4rem; position: relative;
  }
  .central-node {
    position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%);
    width: 40px; height: 40px;
    background: rgba(138, 116, 178, 0.3);
    border: 2px solid rgba(158, 136, 198, 0.8);
    border-radius: 50%;
    box-shadow: 0 0 20px rgba(138, 116, 178, 0.6);
    animation: central-pulse 2s ease-in-out infinite;
  }
  @keyframes central-pulse {
    0%, 100% { transform: translate(-50%, -50%) scale(1); }
    50% { transform: translate(-50%, -50%) scale(1.2); }
  }
  .satellite-node {
    position: absolute; width: 20px; height: 20px;
    background: rgba(138, 116, 178, 0.2);
    border: 1px solid rgba(158, 136, 198, 0.6);
    border-radius: 50%;
    animation: satellite-orbit 8s linear infinite;
  }
  .n1 { top: 10%; left: 50%; animation-delay: 0s; }
  .n2 { top: 50%; right: 10%; animation-delay: 2s; }
  .n3 { bottom: 10%; left: 50%; animation-delay: 4s; }
  .n4 { top: 50%; left: 10%; animation-delay: 6s; }
  @keyframes satellite-orbit {
    0%, 100% { opacity: 0.4; transform: scale(1); }
    50% { opacity: 1; transform: scale(1.3); }
  }
  
  /* Terminal */
  .log-terminal {
    width: 100%; max-width: 700px;
    background: rgba(0, 0, 0, 0.7);
    border: 1px solid rgba(138, 116, 178, 0.4);
    border-radius: 8px; padding: 2rem;
    box-shadow: 0 0 30px rgba(138, 116, 178, 0.2);
  }
  .terminal-header {
    display: flex; justify-content: space-between; margin-bottom: 2rem; padding-bottom: 1rem;
    border-bottom: 1px solid rgba(138, 116, 178, 0.3);
    font-family: monospace; font-size: 0.75rem; letter-spacing: 0.1em;
  }
  .terminal-label { color: rgba(158, 136, 198, 0.9); }
  .terminal-status { color: rgba(138, 116, 178, 0.9); animation: status-blink 1.5s ease-in-out infinite; }
  @keyframes status-blink { 0%, 100% { opacity: 1; } 50% { opacity: 0.3; } }
  .log-entries { display: flex; flex-direction: column; gap: 1.5rem; }
  .log-entry { display: flex; gap: 1rem; opacity: 0; animation: entry-fade-in 0.5s ease-out forwards; }
  .log-entry:nth-child(1) { animation-delay: 0.2s; }
  .log-entry:nth-child(2) { animation-delay: 0.5s; }
  .log-entry:nth-child(3) { animation-delay: 0.8s; }
  @keyframes entry-fade-in { from { opacity: 0; transform: translateX(-10px); } to { opacity: 1; transform: translateX(0); } }
  .speaker { font-family: monospace; color: rgba(158, 136, 198, 0.9); font-weight: bold; white-space: nowrap; font-size: 0.85rem; text-shadow: 0 0 8px rgba(138, 116, 178, 0.5); }
  .text { color: rgba(255, 255, 255, 0.8); line-height: 1.6; font-size: 1rem; }
  
  /* Back button */
  .back-btn {
    margin-top: 4rem; padding: 1rem 2rem;
    background: rgba(0, 0, 0, 0.5);
    border: 1px solid rgba(138, 116, 178, 0.4);
    color: rgba(158, 136, 198, 0.9);
    font-family: monospace; font-size: 0.9rem; cursor: pointer;
    transition: all 0.3s ease; letter-spacing: 0.1em;
  }
  .back-btn:hover {
    background: rgba(138, 116, 178, 0.1);
    border-color: rgba(158, 136, 198, 0.8);
    box-shadow: 0 0 20px rgba(138, 116, 178, 0.3);
  }
  
  @media (max-width: 768px) {
    .container { padding: 2rem 1rem; }
    .node-visualization { width: 150px; height: 150px; margin-bottom: 3rem; }
    .log-terminal { padding: 1.5rem; }
    .log-entry { flex-direction: column; gap: 0.5rem; }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const modal = document.getElementById('node-modal');
    const modalTitle = document.getElementById('modal-title');
    const modalBody = document.getElementById('modal-body');
    const modalClose = document.getElementById('modal-close');
    const backdrop = modal?.querySelector('.node-modal__backdrop');
    const nodes = document.querySelectorAll('.obs-node');
    
    // Node click handlers
    nodes.forEach(node => {
      node.addEventListener('click', () => {
        const type = node.getAttribute('data-node-type');
        const title = node.getAttribute('data-node-title');
        const content = node.getAttribute('data-node-content');
        const message = node.getAttribute('data-node-message');
        
        // Set modal content based on node type
        if (type === 'unresolved') {
          modalTitle.textContent = 'UNRESOLVED NODE';
          modalBody.innerHTML = `
            <p style="opacity: 0.5; text-align: center;">${message || 'NO DATA AVAILABLE'}</p>
            <p style="opacity: 0.4; text-align: center; font-size: 0.85rem; margin-top: 1rem;">OBSERVATION UNRESOLVED</p>
          `;
        } else if (type === 'log') {
          modalTitle.textContent = title || 'ARCHIVE NODE';
          modalBody.innerHTML = `<p>${content}</p>`;
        } else if (type === 'locked') {
          modalTitle.textContent = title || 'LOCKED NODE';
          modalBody.innerHTML = `
            <p style="opacity: 0.6;">${content}</p>
            <p style="opacity: 0.4; margin-top: 1.5rem; font-size: 0.85rem; text-align: center;">[ Node locked - Future activation required ]</p>
          `;
        } else if (type === 'transition') {
          modalTitle.textContent = title || 'TRANSITION NODE';
          modalBody.innerHTML = `
            <p>${content}</p>
            <p style="opacity: 0.5; margin-top: 1.5rem; font-size: 0.85rem;">[ Future expansion point ]</p>
          `;
        }
        
        // Show modal
        modal?.classList.remove('hidden');
        modal?.setAttribute('aria-hidden', 'false');
      });
    });
    
    // Close modal handlers
    modalClose?.addEventListener('click', () => {
      modal?.classList.add('hidden');
      modal?.setAttribute('aria-hidden', 'true');
    });
    
    backdrop?.addEventListener('click', () => {
      modal?.classList.add('hidden');
      modal?.setAttribute('aria-hidden', 'true');
    });
    
    // ESC key to close modal or go back
    window.addEventListener('keydown', (e) => {
      if (e.key === 'Escape') {
        if (!modal?.classList.contains('hidden')) {
          modal?.classList.add('hidden');
          modal?.setAttribute('aria-hidden', 'true');
        } else {
          history.back();
        }
      }
    });
  });
</script>
